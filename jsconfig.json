{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      // 利用 @符号替代 src目录
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  // 在node_modules和dist目录下不可以使用 @符号
  "exclude": [
    "node_modules",
    "dist"
  ]
}